<%- include("../partials/header") -%>
<div data-aos="fade-up" data-aos-duration="500" class="register-photo">
    <div class="form-container">
        <div class="image-holder"></div>
        <form action="/signup" method="POST">
            <h2 class="text-center"><strong>Create</strong> an account.</h2>
            <div class="form-group">
                <input class="form-control" type="text" name="username" placeholder="Username"
                       pattern=".{6,}" title="Username must be at least 6 characters" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="email" name="email" placeholder="Email" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="Password"
                       pattern=".{6,}" title="Password must be at least 6 characters" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="passwordrepeat" placeholder="Password (repeat)" required>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" required>I agree to the license terms.
                    </label>
                </div>
            </div>
            <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Sign Up</button></div><a class="already" href="/login">You already have an account? Login here.</a></form>
    </div>
</div>
<%- include("../partials/footer") -%>